@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Styles
{
    <link href="~/Scripts/bower_libs/dropzone/dist/min/basic.min.css" rel="stylesheet" />
    <link href="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
}
@section Scripts
{
    <script src="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/Scripts/ctrls/CompanyEditCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h3>@Resources.Resource.CompanyProfileEdit</h3>
    </div>
    <div>
        <div class="form-group">
            <div class="jumbotro">
                <form action="/Company/Photo" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" style="width: 200px; border: none;">
                    <div><img id="photo" name="photo" class="img-rounded img-responsive" style="width: 160px;" /></div>
                    <div class="fallback">
                        <input name="file" type="file" />
                        <input type="submit" value="Upload" />
                    </div>
                </form>
            </div>
        </div>
        <form id="commentForm" class="form-horizontal" method="POST" name="form1">
            <legend class="text-info">
                <i class="fa fa-check"></i>
                @Resources.Resource.MustColumn
            </legend>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.CompanyName</label>
                <div class="col-sm-4">
                    <input id="companyname" name="companyname" class="form-control" placeholder="@Resources.Resource.InputCompanyName" required autofocus />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.CompanyIntroduction</label>
                <div class="col-sm-4">
                    <textarea id="companyintroduction" name="companyintroduction" rows="8" class="form-control" placeholder="@Resources.Resource.InputCompanyIntroduction" required></textarea>
                </div>
            </div>
            <legend class="text-info">
                <i class="fa fa-check"></i>
                @Resources.Resource.OptionColumn
            </legend>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.CompanyPhone</label>
                <div class="col-sm-4">
                    <input id="companyphone" name="companyphone" class="form-control" placeholder="@Resources.Resource.InputCompanyPhone" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.CompanyUrl</label>
                <div class="col-sm-4">
                    <input id="companyurl" name="companyurl" class="form-control" placeholder="@Resources.Resource.InputCompanyUrl" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.CompanyAddress</label>
                <div class="col-sm-4">
                    <input id="companyaddress" name="companyaddress" class="form-control" placeholder="@Resources.Resource.InputCompanyAddress" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.CompanyMemberCount</label>
                <div class="col-sm-4">
                    <input id="membercount" name="membercount" type="number" class="form-control" placeholder="@Resources.Resource.InputCompanyMemberCount" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.CompanyStartYear</label>
                <div class="col-sm-4">
                    <input id="startyear" name="startyear" type="number" class="form-control" placeholder="@Resources.Resource.InputCompanyStartYear" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Confirm</button>
                    <button id="btnCancel" type="button" class="btn btn-default">@Resources.Resource.Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>