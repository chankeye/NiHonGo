@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
<script src="~/Scripts/ctrls/CompanyMasterCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <a href='/Company/Edit' class="btn btn-danger">@Resources.Resource.EditCompany</a>
        <a href='/Job/Edit' class="btn btn-danger">@Resources.Resource.AddJob</a>
        <h3>
            <label id="companyname" name="companyname"></label>
        </h3>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
        <p>
            <img id="photo" name="photo" class="img-rounded img-responsive" style="max-height: 300px;" />
        </p>
        <br />
        <div>
            <ul class="nav nav-tabs">
                <li id="CompanyLi" name="CompanyLi" role="presentation" class="active"><a href="#" OnClick="ShowCompany()">@Resources.Resource.MyCompany</a></li>
                <li id="JobLi" name="JobLi" role="presentation"><a href="#" OnClick="ShowJob()">@Resources.Resource.JobList</a></li>
            </ul>
            <hr>
            <div id="CompanyDiv" name="CompanyDiv">
                <p>
                    <label id="companyintroduction" name="companyintroduction" class="contentLabel text-muted"></label>
                </p>

                <p>
                    @Resources.Resource.CompanyUrl：<a id="companyurl" name="companyurl" target="_blank"></a>
                </p>

                <p>
                    @Resources.Resource.CompanyPhone：<label id="companyphone" name="companyphone"></label>
                </p>

                <p>
                    @Resources.Resource.CompanyMemberCount：<label id="membercount" name="membercount"></label>
                </p>

                <p>
                    @Resources.Resource.CompanyAddress：<label id="companyaddress" name="companyaddress"></label>
                </p>

                <p>
                    @Resources.Resource.CompanyStartYear：<label id="startyear" name="startyear"></label>
                </p>

                <p>
                    @Resources.Resource.CreateDate：<label id="createdate" name="createdate"></label>
                </p>

                <p>
                    @Resources.Resource.UpdateDate：<label id="updatedate" name="updatedate"></label>
                </p>
            </div>
            <div id="JobListDiv" name="JobListDiv" style="display: none;">
                <div id="joblist" name="joblist"></div>
                <hr>
                <ul id="pagination" name="pagination" class="pagination custom navbar-right"></ul>
            </div>
        </div>
    </div>
</div>