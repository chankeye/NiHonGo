@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="~/Scripts/ctrls/UserChangePasswordCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h3>@Resources.Resource.ChangePassword</h3>
    </div>
    <div class="alert alert-danger">
        <i class="fa fa-info-circle"></i>
        @Resources.Resource.NeedReLoginInfo
    </div>
    <form id="commentForm" class="form-horizontal" method="POST" action="javascript:alert('完成');" name="form1">
        <div class="form-group">
            <label class="col-sm-2 control-label">@Resources.Resource.OldPassword</label>
            <div class="col-sm-4">
                <input id="oldPwd" name="oldPwd" class="form-control" type="password" placeholder="@Resources.Resource.InputOldPassword" required autofocus />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">@Resources.Resource.NewPassword</label>
            <div class="col-sm-4">
                <input id="newPwd" name="newPwd" class="form-control" type="password" placeholder="@Resources.Resource.InputNewPassword" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">@Resources.Resource.ConfirmNewPassword</label>
            <div class="col-sm-4">
                <input id="comPwd" name="comPwd" class="form-control" type="password" placeholder="@Resources.Resource.InputNewPasswordAgain" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btnConfirm" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Confirm</button>
                <button id="btnCancel" type="button" class="btn btn-default">@Resources.Resource.Cancel</button>
            </div>
        </div>
    </form>
</div>