@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Styles
{
<link href="~/Scripts/bower_libs/dropzone/dist/min/basic.min.css" rel="stylesheet" />
<link href="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
}
@section Scripts
{
<script src="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.js"></script>
<script src="~/Scripts/ctrls/UserProfileEditCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h3>@Resources.Resource.ProfileEdit</h3>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
        <div class="form-group">
            <div class="jumbotro">
                <form action="/User/Photo" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" style="width: 200px; border: none;">
                    <div><img id="photo" name="photo" class="img-rounded img-responsive" style="width: 160px;" /></div>
                    <div class="fallback">
                        <input name="file" type="file" />
                        <input type="submit" value="Upload" />
                    </div>
                </form>
            </div>
        </div>
        <form id="commentForm" class="form-horizontal" method="POST" name="form1">
            <legend class="text-info">
                <i class="fa fa-check"></i>
                @Resources.Resource.BasicProfile
            </legend>
            <div class="form-group">
                <label class="col-sm-2 control-label">*@Resources.Resource.Name</label>
                <div class="col-sm-5">
                    <input id="name" name="name" class="form-control" placeholder="@Resources.Resource.InputName" required autofocus />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">*@Resources.Resource.Email</label>
                <div class="col-sm-5">
                    <input id="email" name="email" class="form-control" placeholder="@Resources.Resource.InputEmail" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Display</label>
                <div class="col-sm-5">
                    <input id="display" name="display" class="form-control" placeholder="@Resources.Resource.InputDisplay" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Introduction</label>
                <div class="col-sm-5">
                    <textarea id="introduction" name="introduction" rows="8" class="form-control" placeholder="@Resources.Resource.InputIntroduction"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Visa</label>
                <div class="col-sm-5">
                    <select id="selOptionsVisas" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Mobile</label>
                <div class="col-sm-5">
                    <input id="mobile" name="mobile" class="form-control" placeholder="@Resources.Resource.InputMobile" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Age</label>
                <div class="col-sm-5">
                    <input id="age" name="age" type="number" class="form-control" placeholder="@Resources.Resource.InputAge" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.IsMarried</label>
                <div class="col-sm-5 checkbox">
                    <label><input id="ismarried" name="ismarried" type="checkbox">@Resources.Resource.Married</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Confirm</button>
                    <button id="btnCancel" type="button" class="btn btn-default">@Resources.Resource.Cancel</button>
                </div>
            </div>
        </form>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            @Resources.Resource.Career
        </legend>
        <div id="experiencelist" name="experiencelist"></div>
        <form id="experienceCommentForm" class="form-horizontal" method="POST" name="experienceCommentForm">
            <div class="form-group">
                <label class="col-sm-2 control-label">*@Resources.Resource.CompanyName</label>
                <div class="col-sm-5">
                    <input id="companyname" name="companyname" class="form-control" placeholder="@Resources.Resource.InputCompanyName" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">*@Resources.Resource.JobTitleName</label>
                <div class="col-sm-5">
                    <input id="jobtitlename" name="jobtitlename" class="form-control" placeholder="@Resources.Resource.InputJobTitleName" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Period</label>
                <div class="col-sm-5">
                    <input id="experiencestartdate" name="experiencestartdate" type="date" /> -
                    <input id="experienceenddate" name="experienceenddate" type="date" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.ExperienceDetail</label>
                <div class="col-sm-5">
                    <textarea id="experiencedetail" name="experiencedetail" rows="8" class="form-control" placeholder="@Resources.Resource.InputExperienceDetail"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnExperienceAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Confirm</button>
                    <button id="btnExperienceCancel" type="button" class="btn btn-default">@Resources.Resource.Cancel</button>
                </div>
            </div>
        </form>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            @Resources.Resource.Works
        </legend>
        <div id="workslist" name="workslist"></div>
        <form id="worksCommentForm" class="form-horizontal" method="POST" name="worksCommentForm">
            <div class="form-group">
                <label class="col-sm-2 control-label">*@Resources.Resource.WorksName</label>
                <div class="col-sm-5">
                    <input id="worksname" name="worksname" class="form-control" placeholder="@Resources.Resource.InputWorksName" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Period</label>
                <div class="col-sm-5">
                    <input id="worksstartdate" name="worksstartdate" type="date" /> -
                    <input id="worksenddate" name="worksenddate" type="date" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.WorksDetail</label>
                <div class="col-sm-5">
                    <textarea id="worksdetail" name="worksdetail" rows="8" class="form-control" placeholder="@Resources.Resource.InputWorksDetail"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnWorksAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Confirm</button>
                    <button id="btnWorksCancel" type="button" class="btn btn-default">@Resources.Resource.Cancel</button>
                </div>
            </div>
        </form>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            @Resources.Resource.Skill
        </legend>
        <div id="skilllist" name="skilllist"></div>
        <form id="skillCommentForm" class="form-horizontal" method="POST" name="skillCommentForm">
            <div class="form-group">
                <div class="col-sm-4">
                    <input id="skill" name="skill" class="form-control" placeholder="@Resources.Resource.InputSkill" required />
                </div>
                <div class="col-sm-4">
                    <button id="btnSkillAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Add</button>
                </div>
            </div>
        </form>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            @Resources.Resource.Language
        </legend>
        <div id="languagelist" name="languagelist"></div>
        <form id="languageCommentForm" class="form-horizontal" method="POST" name="languageCommentForm">
            <div class="form-group">
                <div class="col-sm-4">
                    <input id="language" name="language" class="form-control" placeholder="@Resources.Resource.InputLanguage" required />
                </div>
                <div class="col-sm-4">
                    <button id="btnLanguageAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Add</button>
                </div>
            </div>
        </form>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            @Resources.Resource.License
        </legend>
        <div id="licenselist" name="licenselist"></div>
        <form id="licenseCommentForm" class="form-horizontal" method="POST" name="licenseCommentForm">
            <div class="form-group">
                <div class="col-sm-4">
                    <input id="license" name="license" class="form-control" placeholder="@Resources.Resource.InputLicense" required />
                </div>
                <div class="col-sm-4">
                    <button id="btnLicenseAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Add</button>
                </div>
            </div>
        </form>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            @Resources.Resource.School
        </legend>
        <div id="schoollist" name="schoollist"></div>
        <form id="schoolCommentForm" class="form-horizontal" method="POST" name="schoolCommentForm">
            <div class="form-group">
                <label class="col-sm-2 control-label">*@Resources.Resource.SchoolName</label>
                <div class="col-sm-5">
                    <input id="schoolname" name="schoolname" class="form-control" placeholder="@Resources.Resource.InputSchoolName" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">*@Resources.Resource.Department</label>
                <div class="col-sm-5">
                    <input id="department" name="department" class="form-control" placeholder="@Resources.Resource.InputDepartment" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Period</label>
                <div class="col-sm-5">
                    <input id="schoolstartdate" name="schoolstartdate" type="date" /> -
                    <input id="schoolenddate" name="schoolenddate" type="date" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.SchoolDetail</label>
                <div class="col-sm-5">
                    <textarea id="schooldetail" name="schooldetail" rows="8" class="form-control" placeholder="@Resources.Resource.InputSchoolDetail"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnSchoolAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Confirm</button>
                    <button id="btnSchoolCancel" type="button" class="btn btn-default">@Resources.Resource.Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>