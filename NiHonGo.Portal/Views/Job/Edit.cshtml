@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Styles
{
    <link href="~/Scripts/bower_libs/dropzone/dist/min/basic.min.css" rel="stylesheet" />
    <link href="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />
}
@section Scripts
{
    <script src="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/Scripts/bower_libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="~/Scripts/ctrls/JobEditCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h3>@Resources.Resource.JobEdit</h3>
    </div>
    <div>
        <div class="form-group">
            <div class="jumbotro">
                <form action="/Job/Photo/@Request.Url.ToString().Split('/').Last()" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" style="width: 200px; border: none;">
                    <div><img id="photo" name="photo" class="img-rounded img-responsive" style="width: 160px;" /></div>
                    <div class="fallback">
                        <input name="file" type="file" />
                        <input type="submit" value="Upload" />
                    </div>
                </form>
            </div>
        </div>
        <form id="commentForm" class="form-horizontal" method="POST" name="form1">
            <legend class="text-info">
                <i class="fa fa-check"></i>
                @Resources.Resource.MustColumn
            </legend>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.JobTitle</label>
                <div class="col-sm-4">
                    <input id="jobtitle" name="jobtitle" class="form-control" placeholder="@Resources.Resource.InputJobTitle" required autofocus />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.JobWhat</label>
                <div class="col-sm-4">
                    <textarea id="jobwhat" name="jobwhat" rows="8" class="form-control" placeholder="@Resources.Resource.InputJobWhat" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.JobWhy</label>
                <div class="col-sm-4">
                    <textarea id="jobwhy" name="jobwhy" rows="8" class="form-control" placeholder="@Resources.Resource.InputJobWhy" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.JobHow</label>
                <div class="col-sm-4">
                    <textarea id="jobhow" name="jobhow" rows="8" class="form-control" placeholder="@Resources.Resource.InputJobHow" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.JobDetail</label>
                <div class="col-sm-4">
                    <textarea id="jobdetail" name="jobdetail" rows="8" class="form-control" placeholder="@Resources.Resource.InputJobDetail" required></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.JobType</label>
                <div class="col-sm-4">
                    <select id="selOptionsTypes" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.StatusType</label>
                <div class="col-sm-4">
                    <select id="selOptionsStatuses" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.JobArea</label>
                <div class="col-sm-4">
                    <select id="selOptionsAreas" class="form-control"></select>
                </div>
            </div>
            <legend class="text-info">
                <i class="fa fa-check"></i>
                @Resources.Resource.OptionColumn
            </legend>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.Tag</label>
                <div class="col-sm-4">
                    <input id="tag" name="tag" class="form-control" placeholder="@Resources.Resource.InputTag" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resources.Resource.SalaryRange</label>
                <div class="col-sm-4">
                    <input id="slarystart" name="slarystart" type="number" placeholder="@Resources.Resource.InputSlaryStart" /> ~
                    <input id="slaryend" name="slaryend" type="number" placeholder="@Resources.Resource.InputSlaryEnd" />
                    &nbsp;円
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="btnAdd" type="button" class="btn btn-danger" data-loading-text="@Resources.Resource.Loading">@Resources.Resource.Confirm</button>
                    <button id="btnCancel" type="button" class="btn btn-default">@Resources.Resource.Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>